{% extends 'admin/base.html.twig' %}

{% block content %}
    <table class="table">
    <thead>
    <tr>
        <th>User name</th>
        <th>Phone</th>
        <th>city</th>
        <th>adress</th>
        <th>status</th>

    </tr>
    </thead>
    <tbody>
{% for order in orders %}
    <tr>
        <td>{{ order.user.firstName }} {{ order.user.lastName }}</td>
        <td>{{ order.phone }}</td>
        <td>{{ order.city }}</td>
        <td>{{ order.adress }}</td>
        <td>{{ order.paid }}</td>

    </tr>
{% else %}
    <tr>
        <td colspan="6">no records found</td>
    </tr>
{% endfor %}
    </tbody>
    </table>
{% endblock %}