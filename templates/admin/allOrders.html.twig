{% extends 'admin/base.html.twig' %}

{% block content %}

    {% for message in app.flashes('success') %}
        <div class="row mt-3">
            <div class="col">
                <div class="alert alert-success">
                    {{ message }}
                </div>
            </div>
        </div>
    {% endfor %}
    <table class="table">
    <thead>
    <tr>
        <th>User name</th>
        <th>User email</th>
        <th>Total price</th>
        <th>Adress</th>
        <th>status</th>
        <th>payment method</th>
        <th>Date</th>
        <th>details</th>
        <th>Get PDF</th>
        <th>Update order</th>
    </tr>
    </thead>
    <tbody>
{% for order in orders %}
    <tr>
        <td>{{ order.userName }}</td>
        <td>{{ order.userMail }}</td>
        <td>{{ order.totalPrice }}</td>
        <td>{{ order.address }}</td>
        <td>{{ order.status }}</td>
        <td>{{ order.type }}</td>
        <td>{{ order.date }}</td>
        <td><a href="{{ path('admin_user_order', {id: order.id}) }}" class="btn btn-primary">Orders</a></td>
        {% if order.pdf == 1 %}
        <td><a href="{{ path('order_download', {file: order.id }) }}" class="btn btn-primary">Download PDF</a></td>
        {% endif %}
        {% if order.pdf == 1 and order.status == 'new' %}

            <td><a href="{{ path('admin_order_update', {id: order.id }) }}" class="btn btn-primary">Update Order</a></td>
        {% endif %}
    </tr>
{% else %}
    <tr>
        <td colspan="6">no records found</td>
    </tr>
{% endfor %}
    </tbody>
    </table>


{% endblock %}


