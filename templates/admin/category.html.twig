{% extends 'admin/base.html.twig' %}


{% block content %}
    <!-- Main content -->
    <section class="content container-fluid">
        {% for message in app.flashes('success') %}
            <div class="row mt-3">
                <div class="col">
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                </div>
            </div>
        {% endfor %}
        {{ form_start(form) }}
        {{ form_row(form.name) }}
        <button type="submit" class="btn btn-primary" formnovalidate>Add new Category</button>
        {{ form_end(form) }}


        <div class="box-body table-responsive no-padding">
            <table class="table table-hover">
                <tr>
                    <th>Category name</th>
                    <th>Delete</th>
                </tr>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.name }}</td>
                        <td><a href="{{ path('category_delete', {id: category.id}) }}" class="btn btn-danger">Delete</a></td>
                    </tr>
                {% endfor %}

            </table>
        </div>


    </section>
    <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

{% endblock %}