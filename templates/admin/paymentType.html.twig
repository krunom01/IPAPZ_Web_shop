{% extends 'admin/base.html.twig' %}

{% block content %}

    {% for message in app.flashes('success') %}
        <div class="row mt-3">
            <div class="col">
                <div class="alert alert-success">
                    {{ message }}
                </div>
            </div>
        </div>
    {% endfor %}
    <table class="table">
        <thead>
        <tr>
            <th>Type</th>
            <th>Visibility</th>
            <th>Edit</th>
        </tr>
        </thead>
        <tbody>
        {% for payment in payments %}
            <tr>
                <td>{{ payment.type }}</td>
                <td>{% if payment.visibility == 1  %}
                {{ 'enabled' }}
                {% else %}
                    {{ 'disabled' }}
                    {% endif %}
                </td>
                <td><a href="{{ path('admin_editPayment', {id: payment.id}) }}" class="btn btn-primary">Edit</a></td>
                <td><a href="{{ path('admin_deletePayment', {id: payment.id}) }}" class="btn btn-danger">Delete</a></td>
                <td><a href="{{ path('admin_updatePayment', {id: payment.id}) }}" class="btn btn-primary">Change visibility</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('admin_newPayments') }}">Create new</a>

{% endblock %}


