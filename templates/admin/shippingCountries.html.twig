{% extends 'admin/base.html.twig' %}

{% block content %}
    {% for message in app.flashes('success') %}
        <div class="row mt-3">
            <div class="col">
                <div class="alert alert-success">
                    {{ message }}
                </div>
            </div>
        </div>
    {% endfor %}
    <table class="table">
        <thead>
        <tr>
            <th>Country name</th>
            <th>Country code</th>
            <th>shipping price</th>
            <th>delete</th>
            <th>edit</th>

        </tr>
        </thead>
        <tbody>
        {% for country in countries %}
            <tr>
                <td>{{ country.country }}</td>
                <td>{{ country.countryCode }}</td>
                <td>{{ country.shippingPrice }} â‚¬</td>
                <td><a href="{{ path('admin_deleteCountry', {id: country.id }) }}" class="btn btn-danger">Delete</a></td>
                <td><a href="{{ path('admin_editCountry', {id: country.id }) }}" class="btn btn-primary">Edit</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}