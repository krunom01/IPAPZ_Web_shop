{% extends 'base.html.twig' %}
{% block content %}
    <!-- Main content -->
    <section class="content container-fluid">
        {% for message in app.flashes('success') %}
            <div class="row mt-3">
                <div class="col">
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                </div>
            </div>
        {% endfor %}

        <div class="box-body table-responsive no-padding">
            <table class="table table-hover">
                <tr>
                    <th>Fist Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Delete</th>
                </tr>
                {% for user in users %}

                    <tr>
                        <td>{{ user.firstname }}</td>
                        <td>{{ user.lastname }}</td>
                        <td>{{ user.email }}</td>
                        <td><a href="{{ path('user_delete', {id: user.id}) }}" class="btn btn-danger">Delete</a></td>
                        <td><a href="{{ path('admin_user_edit', {id: user.id}) }}" class="btn btn-primary">Edit</a></td>
                    </tr>

                {% endfor %}

            </table>
        </div>


    </section>
    <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

{% endblock %}