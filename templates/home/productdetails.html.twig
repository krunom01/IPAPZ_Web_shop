{% block popularcategory %}
    <h1>Product</h1>
    <form action = "{{ path('shopcard_new', {id: product.id}) }}" name="ShopcardType" method="post">
    <table class="table">
        <tbody>
        <tr>
            <th>Name</th>
            <td>{{ product.name }}</td>
        </tr>
        <tr>
            <th>Productnumber</th>
            <td>{{ product.productnumber }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ product.price }} kn</td>
        </tr>
        <tr>
            <th>Image</th>
            <td><img src="../../../../../upload/image/{{ product.image }}" alt="{{ product.name }}"></td>
        </tr>
        {% if (is_granted('ROLE_USER')) or (is_granted('ROLE_ADMIN')) %}
        <tr>
            <th>Quantity</th>
            <td><input type="number" name="quantity" value="1" placeholder="set product quantity"></td>
        </tr>
        {% endif %}
        </tbody>
    </table>
        {% if (is_granted('ROLE_USER')) or (is_granted('ROLE_ADMIN')) %}
            <button type="submit">Add to cart</button>
        {% endif %}
    </form>


