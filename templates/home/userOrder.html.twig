


{% extends 'home/newBootstrap.html.twig' %}

{% block content %}
    {% set count = 0 %}
    <table class="table">
        <thead>
        <tr>
            <th></th>
            <th>Product name</th>
            <th>Product image</th>
            <th>Quantity</th>

        </tr>
        </thead>
        <tbody>
        {% for userItem in userItems %}
            {% set count = count + 1 %}
            <tr>
                <td>{{ count }}</td>
                <td> {{ userItem.product.name }}</td>
                <td><img width="80" height="80" src="../../../../../upload/image/{{ userItem.product.image }}" alt="{{ userItem.product.name }}"></td>
                <td> {{ userItem.productQuantity }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% block footer %}
{% endblock %}