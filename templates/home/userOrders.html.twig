{% extends 'home/newBootstrap.html.twig' %}

{% block content %}
{% set count = 0 %}
    <table class="table">
        <thead>
        <tr>
            <th></th>
            <th>User</th>
            <th>Email</th>
            <th>Country</th>
            <th>Address</th>
            <th>Type</th>
            <th>Status</th>
            <th>Date</th>
            <th>Total price</th>
        </tr>
        </thead>
        <tbody>
        {% for userOrder in userOrders %}
        {% set count = count + 1 %}
        <tr>
            <td>{{ count }}</td>
            <td>{{ userOrder.userName }}</td>
            <td>{{ userOrder.userMail }}</td>
            <td>{{ userOrder.country }}</td>
            <td>{{ userOrder.address }}</td>
            <td>{{ userOrder.type }}</td>
            <td>{{ userOrder.status }}</td>
            <td>{{ userOrder.date }}</td>
            <td>{{ userOrder.totalPrice }} â‚¬</td>
            <td>
                <a href="{{ path('user_order_details', {'id': userOrder.id}) }}">
                    <button class="btn btn-primary" type="submit">Details</button>
                </a>
            </td>
        </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
