{% extends 'home/newBootstrap.html.twig' %}

{% block content %}
    <table class="table">
        <thead>
        <tr>
            <th></th>
            <th>Product name</th>

        </tr>
        </thead>
        <tbody>
        {% for wish in wishlist %}
            {% set count = 0 %}
            {% set count = count + 1 %}
            <tr>
                <td>{{ count }}</td>
                <td>{{ wish.product.name }}</td>
                <td> <img  height="100" width="100" src="../../../../../upload/image/{{ wish.product.image }}" alt="{{ wish.product.name }}"></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
{% block footer %}
{% endblock %}