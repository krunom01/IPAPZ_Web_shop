{% block content %}
    <h1>Shopcard index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Shopcard id</th>
                <th>Product name</th>
                <th>Product number</th>
                <th>Product price</th>


            </tr>
        </thead>
        <tbody>
        {% for shopcard in shopcards %}
            <tr>
                <td>{{ shopcard.id }}</td>
                <td>{{ shopcard.name }}</td>
                <td>{{ shopcard.productnumber }}</td>
                <td>{{ shopcard.productnumber * shopcard.price }} kn</td>

                <td>
                    <a href="{{ path('shopcard_delete', {'id': shopcard.id}) }}">delete</a>

                </td>
            </tr>

            {%  set total = total + (shopcard.productnumber * shopcard.price) %}

        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
    Total :{{ total }} kn
